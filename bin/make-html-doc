#!/bin/sh

pandoc \
    -H css/github.css \
    -f markdown \
    -t html \
    -s \
    -o README.html \
    README.md

#     -H css/github.css \
#     -s \

pandoc \
    -f markdown \
    -t beamer \
    -o README.pdf \
    README.md

pandoc \
    --latex-engine=xelatex \
    -o README.pdf \
    README.md
